<div class="column is-full">
  <% if user_signed_in? %>
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'posts/form' %>
    </div> 
  </article>
  <% end %>

<% @posts.each do |post| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%# <%= gravatar_image_tag(post.user.email, size: 64) %> 
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <%# <strong><%= post.user.name</strong><br /> %>
          <%# <small><%= post.user.username</small><br/> %>
          <p><%= post.post %></p>
        </div>
    </article>
  </div>
<% end %>
</div>